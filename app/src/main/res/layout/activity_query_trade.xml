<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar_normal"/>


    <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <com.god.kotlin.widget.DatePicker
                android:id="@+id/date_begin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="2018-02-01"
                android:textColor="@color/trade_blue"
                android:textSize="15sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="至"
                android:textColor="@color/trade_black"
                android:textSize="15sp"/>

        <com.god.kotlin.widget.DatePicker
                android:id="@+id/date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-02-07"
                android:textColor="@color/trade_blue"
                android:textSize="15sp"/>


        <View android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"/>

        <Button
                android:id="@+id/date_submit"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:text="查询"
                android:textColor="@color/trade_white"
                android:background="@color/trade_red"
                android:textSize="14dp"
                android:layout_marginRight="20dp"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/trade_gray"/>

    <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>