<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/stock_info"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="格力电器"
            android:textColor="@color/trade_item_text"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="5dp"
            android:textColor="@color/trade_item_text"
            android:text="600211"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stock_profit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_gravity="right"
            android:text="1000.44"
            android:textColor="@color/trade_item_text"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/profit_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:textColor="@color/trade_item_text"
            android:text="12%"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stock_layout3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stock_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_gravity="right"
            android:text="5000股"
            android:textColor="@color/trade_item_text"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/stock_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:textColor="@color/trade_item_text"
            android:text="0股"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stock_layout4"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stock_prime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_gravity="right"
            android:text="32.21元"
            android:textColor="@color/trade_item_text"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/stock_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:textColor="@color/trade_item_text"
            android:text="29.25元"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>