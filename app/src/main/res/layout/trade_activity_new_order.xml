<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
            android:id="@+id/bar_layout"
            layout="@layout/toolbar_normal"/>

    <include layout="@layout/view_top"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_gray"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

        <TextView
                style="@style/trade_edit_title_custom"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/trade_securities_code"/>

        <com.god.kotlin.trade.InputCodeView
                android:id="@+id/pre_input_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
        />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_gray"/>

    <LinearLayout
            android:id="@+id/type_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                style="@style/trade_edit_title_custom"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="交易类型"/>

        <TextView
                android:id="@+id/pre_buy_flag"
                android:layout_weight="1"
                style="@style/trade_edit_content_custom"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/title"
                android:text="买入"
                android:gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:hint=""/>

        <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/nav_down"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_gray"/>


    <LinearLayout
            android:id="@+id/quote_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                style="@style/trade_edit_title_custom"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="报价方式"/>

        <TextView
                android:id="@+id/pre_quote_way"
                android:layout_weight="1"
                style="@style/trade_edit_content_custom"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/title"
                android:text="限价委托"
                android:gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:hint=""/>

        <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/nav_down"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_gray"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

        <TextView
                style="@style/trade_edit_title_custom"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="交易价格"/>

        <EditText
                android:id="@+id/pre_price"
                android:layout_weight="1"
                android:background="@null"
                style="@style/trade_edit_content_custom"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/title"
                android:gravity="right|center_vertical"
                android:hint="请输入价格"/>

        <TextView
                style="@style/trade_edit_title_custom"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text="元"/>

    </LinearLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_gray"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

        <TextView
                style="@style/trade_edit_title_custom"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="交易数量"/>

        <EditText
                android:id="@+id/pre_num"
                android:layout_weight="1"
                android:background="@null"
                style="@style/trade_edit_content_custom"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/title"
                android:gravity="right|center_vertical"
                android:hint="请输入数量"/>

        <TextView
                style="@style/trade_edit_title_custom"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text="股"/>

    </LinearLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_gray"/>

    <Button
            android:id="@+id/pre_add_submit"
            style="@style/trade_red_button_custom"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:text="@string/trade_confirm"/>


</LinearLayout>